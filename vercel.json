{
    "version": 2,
    "name": "dataleaf-panel",
    "builds": [
        {
            "src": "server/index.js",
            "use": "@vercel/node"
        },
        {
            "src": "client/package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "build"
            }
        },
        {
            "src": "admin/package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "build"
            }
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "/server/index.js"
        },
        {
            "src": "/admin/_next/(.*)",
            "dest": "/admin/$1"
        },
        {
            "src": "/admin/static/(.*)",
            "dest": "/admin/static/$1"
        },
        {
            "src": "/admin/(.*\\.(js|css|png|jpg|jpeg|svg|gif|ico|json|woff|woff2|ttf|eot))",
            "dest": "/admin/$1"
        },
        {
            "src": "/admin/(.*)",
            "dest": "/admin/index.html"
        },
        {
            "src": "/static/(.*)",
            "dest": "/client/static/$1"
        },
        {
            "src": "/(.*\\.(js|css|png|jpg|jpeg|svg|gif|ico|json|woff|woff2|ttf|eot))",
            "dest": "/client/$1"
        },
        {
            "src": "/(.*)",
            "dest": "/client/index.html"
        }
    ],
    "env": {
        "NODE_ENV": "production"
    }
}